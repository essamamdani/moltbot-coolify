{
  "$schema": "https://docs.openclaw.ai/schema/config.json",
  "plugins": {
    "enabled": true,
    "load": {
      "paths": [
        "/app/extensions/telegram-enhanced"
      ]
    },
    "entries": {
      "telegram-enhanced": {
        "enabled": true,
        "config": {
          "enableButtonTool": true,
          "enableButtonCommand": true,
          "defaultButtons": [
            [
              { "text": "✅ Yes", "callback_data": "yes" },
              { "text": "❌ No", "callback_data": "no" }
            ],
            [
              { "text": "ℹ️ More Info", "callback_data": "info" }
            ]
          ]
        }
      }
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "env:TELEGRAM_BOT_TOKEN",
      "dmPolicy": "pairing",
      "capabilities": {
        "inlineButtons": "all"
      },
      "groups": {
        "*": {
          "requireMention": true
        }
      }
    }
  },
  "agents": {
    "defaults": {
      "model": "anthropic:claude-sonnet-4"
    }
  }
}
